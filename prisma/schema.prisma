// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  nome      String
  avatarUrl String?
  cpf       BigInt   @unique
  email     String   @unique
  telefone  String   @unique
  password  String
  crearedAt DateTime @default(now())

  acionaEmergencia   AcionaEmergencia[]
  ContatosEmergencia ContatosEmergencia[]
  Mensagem           Mensagem[]
}

model AcionaEmergencia {
  id        Int    @id @default(autoincrement())
  biometric Bytes
  tecla01   String
  tecla02   String
  tecla03   String
  userId    String

  user User @relation(fields: [userId], references: [id])
}

model ContatosEmergencia {
  id        Int    @id @default(autoincrement())
  contato01 String
  contato02 String
  contato03 String
  userId    String

  user User @relation(fields: [userId], references: [id])
}

model Mensagem {
  id             String   @id @default(cuid())
  remetenteId    String
  destinatarioId String
  mensagem       String
  crearedAt      DateTime @default(now())

  destinatario User @relation(fields: [destinatarioId], references: [id])
}
