generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  nome String
  avatarUrl String?
  googleId String? @unique
  email String? @unique
  telefone String? @unique
  createdAt DateTime

  contactUser ContactUser[]
  // Mensagem Mensagem[]

  @@map("user")
}

model ContactUser {
  id String @id @default(uuid())
  contact String
  amount Int

  user User @relation(fields: [contact], references: [id])

  @@unique([contact, amount])
  @@map("contact_user")
}

